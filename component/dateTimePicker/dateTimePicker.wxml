<view class="datepicker-picker-container" wx:if="{{visible}}">
		<view class="datepicker-mask {{className[0]}}" hidden="{{!visible}}" binTap="hide"></view>
		<view class="datepicker-picker {{className[1]}}">
				<view class="datepicker-picker-header">
						<text class="datepicker-picker-header-btn" binTap="onCancel">取消</text>
						<text class="datepicker-picker-header-title" wx:if="{{!title}}">{{title}}</text>
						<text class="datepicker-picker-header-btn" binTap="onConfirm">确定</text>
				</view>
				<view class="datepicker-picker-body">
						<picker-view bindchange="onChange" value="{{value}}">
								<picker-view-column>
										<view wx:for="{{dateTimesArr[0]}}" wx:for-item="dayItem" wx:for-index="dayIndex" wx:key="dayIndex">{{dayItem}}</view>
								</picker-view-column>
								<picker-view-column>
										<view wx:for="{{dateTimesArr[1]}}" wx:for-item="timeItem" wx:for-index="timeIndex" wx:key="timeIndex">{{timeItem}}</view>
								</picker-view-column>
						</picker-view>
				</view>
		</view>
</view>
