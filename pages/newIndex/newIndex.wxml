<block wx:if="{{pageLoading}}">
    <view class='f-c-c empty'>
        <load></load>
    </view>
</block>

<block wx:else>
    <view class='i-head' bindtap='creatAct' id="recreation">
        <image src='../../images/chatu@3x.png'></image>
        <view class='i-info'>
            <view class='info-title'> 群活动</view>
            <view class='i-sub'>组织自定义活动，快速发布</view>
        </view>
    </view>
    <view class='lines'>发布其他活动</view>
    <view class='i-grid'>
        <view wx:for="{{types}}" bindtap='creatAct' class='item' id="{{item.id}}" wx:key='groups'>
            <image src="{{item.img}}"></image>
            <view>{{item.name}}</view>
        </view>
    </view>
</block>