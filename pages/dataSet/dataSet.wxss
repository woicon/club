.forms {
    background: #fff;
    padding: 0 40rpx;
}
.head{
    display: flex;
    padding:60rpx 0;
    background:#fff;
}
.head-img{
    text-align:center;
    padding:30rpx 0;
}
.m-infos{
    text-align:left;

}
.head-img .ico,.head-img image{
    width:100rpx;
    height:100rpx;
    font-size:26rpx;
    background:#eee;
    display:flex;
    align-items:center;
    justify-content:center;
    border-radius:100px;
}
.head-img text{
    font-size:28rpx;
    color:#ccc;
}
.forms .f-line {
    display: flex;
    align-items: center;
}
.hpic{
    justify-content:space-between;
}
.ars{
    padding:30rpx 0;
    display: flex;
    justify-content:space-between;
    align-items:center;
}
.forms input{
    text-align:left;
}
.forms input, .forms textarea{
    font-size: 28rpx;
    padding: 32rpx 0;
    text-align:right;
}
.forms input,.forms textarea,.forms .text-warp{
    flex-grow:2;
    color:#333;
}
.lines {
    margin-top:20rpx;
}
.text-warp textarea{
 width:100%;
}
.forms label {
    width: 160rpx;
    font-size: 26rpx;
    color: #555;
}
