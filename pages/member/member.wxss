.member-grid>view,.member-grid>navigator {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 35rpx 0;
    margin: 0 40rpx;
    position: relative;
}

.member-grid>view::after,.member-grid>navigator::after {
    content: '';
    width: 12rpx;
    height: 12rpx;
    display: block;
    border: 2px solid #ccc;
    opacity:.8;
    border-left: none;
    border-bottom: none;
    transform: rotate(45deg);
}

.member-grid>view::before,.member-grid>navigator::before {
    content: '';
    display: block;
    position: absolute;
    left: -50%;
    right: -50%;
    bottom: 0;
    transform: scale(0.5);
    border-bottom: 1px solid #eee;
}

.member-grid text {
    font-size: 30rpx;
    color: #444;
    flex-grow: 2;
}

.member-grid .ico {
    font-size: 32rpx;
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
    border-radius: 90px;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.member-grid text {
    display: block;
}

.role{
    font-size:24rpx;
}
