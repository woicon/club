    color: #fff;
    display: flex;
    padding: 0 40rpx;
    align-items: center;
    justify-content: space-between;
}

.m-info {
    display: flex;
    align-items: center;
}

.m-phone {
    font-size: 24rpx;
    margin-top: 10rpx;
}

.m-name {
    font-size:35rpx;
    font-weight: 800;
}

.m image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 200px;
    margin-right: 28rpx;
}

.em {
    font-size: 24rpx;
    opacity: 0.5;
}

.button {
    margin: 90rpx;
}

