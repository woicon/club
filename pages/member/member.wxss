page {
    background: #fff;
}

.m {
    text-align: center;
    background-image: linear-gradient(0deg, #7034ff 0%, #323dad 100%);
    height: 200rpx;
    color: #fff;
    line-height: 2;
    display: flex;
    padding: 0 40rpx;
    align-items: center;
    justify-content: space-between;
}

.m-info {
    display: flex;
    align-items: center;
}

.m-name {
    font-size: 30rpx;
}

.m image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 200px;
    margin-right: 20rpx;
}

.em {
    font-size: 24rpx;
    opacity: 0.5;
}

.button {
    margin: 90rpx;
}

.member-grid {
    display: flex;
    flex-wrap: wrap;
    font-size: 25rpx;
    background: #fff;
}

.member-grid .ico {
    font-size: 42rpx;
}

.member-grid text {
    margin-top: 20rpx;
    display: block;
}

.member-grid>navigator, .member-grid>view {
    width: 33.333333%;
    padding: 40rpx 0;
    text-align: center;
    color: #888;
}
