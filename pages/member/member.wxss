.orderbar{
    display:flex;
    margin:0 40rpx;
}
.orderbar .tags{
    position:absolute;
    right:-10rpx;
    top:-10rpx;
    background:red;
    color:#fff;
    display:flex;
    align-items:center;
    justify-content:center;
    min-height:44rpx;
    min-width:44rpx;
    border-radius:200px;
    font-size:28rpx;
