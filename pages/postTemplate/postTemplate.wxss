
.post-titles {
    font-weight: 800;
    font-size: 28rpx;
    color: #444;
    padding: 20rpx 40rpx;
}

.postimg {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0 30rpx;
}

.post-title {
    font-size: 30rpx;
    font-weight: 800;
}

.postimg .img {
    display: block;
    width: 30%;
    margin: 16rpx 0;
    height: 110rpx;
}

.postimg .img image {
    width: 100%;
    height: 110rpx;
}
