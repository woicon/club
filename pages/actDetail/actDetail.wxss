textarea {
    width: 100%;
    height: auto;
    text-align: justify;
}

.t-warp {
    margin: 0 40rpx;
    padding: 30rpx 0;
}

.t {
    padding-bottom: 40rpx;
    font-size: 28rpx;
}

.editbar {
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx 0;
}

.editbar>view {
    color: #fff;
    width: 70rpx;
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 920px;
    margin: 0 20rpx;
}

.d-item {
    margin-bottom: 30rpx;
    background: #fff;
    margin: 40rpx;
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1);
}

.list-img {
    display: flex;
    position: relative;
}

.list-img image {
    width: 100%;
    margin: auto;
}

.add {
    border: none;
}
