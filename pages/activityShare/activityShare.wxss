.img {
    display: flex;
    width:550rpx;
    height:800rpx;
    overflow:hidden;
    margin-top:50rpx;
    border-radius:4px;
}
.share-btn{
    margin:38rpx 0 0;
    font-size:30rpx;
    border-radius:6rpx;
    background: #323dad;
    color:#fff;
    display: flex;
    align-items:center;justify-content:center;
    width: 550rpx;
}
.close{
    width:90rpx;
    height:90rpx;
    position:absolute;
    bottom:40rpx;
    border:2rpx solid #fff;
    display:flex;
    align-items:center;
    justify-content:center;
    border-radius:100px;
    transform:rotate(45deg);
}
.close::after,.close::before{
    content: '';
    display: block;
    background:#fff;
    margin:auto;
}
.close::after{
    width:4rpx;
    height:60rpx;
    position:absolute;
    left:50%;
    top:50%;
    margin-left:-2rpx;
    margin-top:-30rpx;

}
.close::before{
    width:60rpx;
    height:4rpx;
}

.img image {
    width: 550rpx;
    height: 978rpx;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
}

.s-head {
    padding: 30rpx;
}

.head-name {
    font-size: 34rpx;
    color:#444;
}
.share-title{
    color:#999;
    text-align:center;
    display: flex;
    align-items:center;
    justify-content:space-between;
    position:relative;
    font-size:24rpx;
    opacity:.9;
    margin:50rpx 70rpx;
}
.share-title::after,.share-title::before{
    content:'';
    display:block;
    width:140rpx;
    height:1rpx;
    background:#ccc;
}

.head-info {
    color: #323dad;
    font-size: 24rpx;
}

.s {
    font-size: 24rpx;
    color: #555;
}

.s-line {
    display: flex;
    align-items: center;
    line-height: 1.8;
    color: #888;
    font-size:23rpx;
}

.s-info {
    padding: 30rpx;
}

.s-line .ico {
    margin-right: 10rpx;
}

.s-name {
    font-size: 34rpx;
    color: #444;
    margin-bottom: 15rpx;
}

.s-img {
    margin: 0 30rpx;
}

.s-img image {
    width: 100%;
    height: 200px;
}
.share-bar{
    display: flex;
    align-items:center;
    justify-content:center;
    text-align:center;
}
.share-bar button::after{
    border:none;
}
.s-status{
    display:inline-block;
    margin-bottom:8rpx;
    background:#eee;
    color:#555;
    padding:4rpx 20rpx;
    border-radius:3px;
}
.share-bar>view,.share-bar button{
    display:flex;
    flex-direction:column;
    align-items:center;
    margin:0 60rpx;
    background:transparent;
    font-size:25rpx;
    color:#666;
}
.share-bar image{
    width:80rpx;
    height:80rpx;
}
.share-bar .ico{
    font-size:60rpx;
    margin-bottom:8rpx;
}

.share-cont {
    margin: 50rpx;
    border-radius: 4rpx;
    background:#fff;
    box-shadow: 0 3px 5px 0 rgba(0,0,0,0.10);
}

.s-head {
    display: flex;
    align-items: center;
}

.s-head image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 90px;
    margin-right: 30rpx;
}
.share-group{
    position:fixed;
    display: flex;
    align-items:center;
    justify-content:flex-start;
    flex-direction:column;
    left:0;
    right:0;
    bottom:0;
    top:0;
    z-index:100;
}
