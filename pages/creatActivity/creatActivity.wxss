.act {
    background: #fff;
    margin-bottom: 30rpx;
}

page {
    background: #f4f4f4;
}


.list-detail::before {
    border: none;
}

.postscroll {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
}

.act label {
    font-size: 28rpx;
    color: #666;
    padding: 0rpx 0;
    width: 150rpx;
    flex-basis: 150rpx;
}

.img-tab {
    position: absolute;
    left: 0;
    right: 0;
}

.act-img {
    background: #eee;
    display: flex;
    margin: 0;
    height: 400rpx;
    position: relative;
}

.act-img .ico {
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #999;
}

.act-img .edits {
    position: absolute;
    left: 40rpx;
    bottom: 40rpx;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    width: 80rpx;
    height: 80rpx;
    border-radius: 90px;
    font-size: 32rpx;
}

.act-img .ico::before {
    font-size: 44rpx;
}

.act>view {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    margin: 0 40rpx;
}

.act>view input, .act>view .value {
    padding: 44rpx 0;
    text-align: left;
    font-size: 28rpx;
    color: #444;
    flex-grow: 2;
}

.act>view input {
    font-weight: 800;
    text-align: right;
    color: #ff6363;
    font-size:34rpx;
}

.act>view::before {
    content: '';
    position: absolute;
    left: -50%;
    right: -50%;
    bottom: 0;
    border-bottom: 1px solid #eee;
    transform: scale(0.5);
}

.act>view:last-child::before, .act>view.list-detail::before {
    border: none;
}

.post-scroll {
    height: 90rpx;
    background: #fff;
}

.act-bar {
    margin: 0 40rpx;
    font-size: 24rpx;
    color: #999;
    padding: 20rpx 0 190rpx;
}

.act-bar button {
    margin: 50rpx 0;
}

.post {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
}

swiper {
    width: 100%;
    height: 100%;
}

.img-tab {
    text-align: center;
    white-space: nowrap;
}

.img-tab>view {
    padding: 0 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    display: inline-block;
    color: #999;
}

.img-tab>view.active {
    color: #ff6363;
}

.imgs {
    width: 100%;
}

.imgs image {
    width: 100%;
    height: 400rpx;
    display: block;
}

.act .list-arr .value {
    text-align: right;
    color: #444;
}

.act .list-arr .value-hidden {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #888;
    margin-left: 10rpx;
    width: 200rpx;
}

.act-ser {
    display: flex;
    align-items: center;
}

.act-ser.active .ico {
    color: #ff6363;
}

.act-ser navigator {
    color: #ff6363;
}

.act-ser .ico {
    margin-right: 8rpx;
}

.dates {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    flex-grow: 2;
    justify-content: space-between;
}

.dates picker .value {
    text-align: right;
    flex-grow: 2;
}

.pimg {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: #fff;
    z-index: 100;
}

.act>view.details {
    font-size: 26rpx;
    line-height: 1.6;
    padding-bottom: 44rpx;
    display: block;
}

.act>view.details view {
    line-height: 1.6;
    text-align: justify;
    color: #555;
    word-wrap:break-word;
}

.details image {
    width: 100%;
    height: 400rpx;
    display: block;
    margin: 10rpx 0 20rpx;
}

.detail-txt {
    text-align: justify;
}

.p {
    position: fixed;
    z-index: 100;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.7);
}

.p-line {
    font-size: 30rpx;
}

.p-line input {
    padding: 30rpx 0;
    border-bottom: 1px solid #eee;
    width: 100%;
    flex-grow: 2;
    font-size:32rpx;
}

.p-line {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 20rpx 0;
}

.p-cont {
    background: #fff;
    padding: 40rpx;
    margin: 16% 8%;
    border-radius:4rpx;
}

.p-btn {
    font-size: 26rpx;
    flex-basis: 390rpx;
    flex-grow: 0;
    text-align: center;
    padding: 15rpx 0;
    color: #444;
    background: #eee;
}

.p-btn.disable {
    opacity: 0.4;
}

.ps-line input {
    border: none;
}

.p .button {
    margin-top: 40rpx;
}

.p .button.disable {
    opacity: 0.6;
    margin-top: 40rpx;
}

.p-title {
    font-weight: 800;
    padding: 20rpx 0 40rpx;
}
