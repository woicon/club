.item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
}

.item-img {
    width: 90rpx;
    height: 90rpx;
    margin-right: 24rpx;
    border-radius: 90rpx;
}

.item-info {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #666;
}

.item-check {
    padding: 10rpx 0;
    width: 120rpx;
    text-align: center;
    border-radius: 2px;
    font-size: 26rpx;
    color: #fff;
}

.item-check.disable {
    opacity: 0.5;
    background: #eee;
    color: #888;
}

.check-card {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
}

.check-warp {
    width: 80%;
    padding: 0;
    background: #fff;
    margin-top: -20%;
    position: relative;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border-radius: 8rpx;
    animation: sliderInUp 0.3s ease-in both;
}

.check-warp .ico {
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    right: 0;
    top: 0;
    border-radius: 90px;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 50rpx;
    color: #ccc;
}

.check-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    
}
.scroll-apply{
    position:absolute;
    left:0;
    top:0;
    bottom:0;
    right:0;
}
.check-bar>view {
    width: 50%;
    text-align: center;
    padding: 24rpx 0;
    font-size:30rpx;
}
.check-bar>view:first-child{
    border-right:1px solid #eee;
}
.check-bar .item-check {
    color: #505ce0;
}

.check-person {
    font-size: 26rpx;
    line-height: 1.6;
    color:#444;
}

.c-title {
    font-size: 28rpx;
    color: #666;
    font-weight: 800;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin: 30rpx 0 0;
}

.c-title::after, .c-title::before {
    content: '';
    width: 140rpx;
    border-bottom: 1px solid #eee;
}

.c-head {
    text-align: center;
    padding-bottom:30rpx;
    border-radius: 10rpx 10rpx 0 0;
    /* background-image: linear-gradient(0deg, #7034ff 0%, #323dad 100%); */
}

.c-person {
    padding:30rpx;
}
.c-list:last-child::after{
    border: none;
}
.c-head image {
    margin-top: -65rpx;
    width: 130rpx;
    height: 130rpx;
    border: 2px solid #fff;
    box-sizing: border-box;
}

.c-name {
    font-size: 32rpx;
    font-weight: 800;
    color: #444;
}

.c-phone {
    font-size: 24rpx;
    margin-top: 8rpx;
    color: #444;
}

.c-list {
    margin-top: 20rpx;
}

.c-hide {
    text-align: center;
    font-size: 32rpx;
    color: #666;
}
