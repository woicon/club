<view class='a-head'>
    <image src='{{detail.activityImg}}' mode="aspectFill"></image>
    <view class='dates'>
        <view class='a-title'>{{detail.activityName}}</view>
        <view>
            <view class='ico ico-earth'></view>{{detail.activityAddress ? detail.activityAddress :'线上活动'}}</view>
        <view>
            <view class='ico ico-clock2'></view>{{detail.startDate}}</view>
    </view>
</view>
<view class='a-block ticket'>
    <view class='cstitle'>{{form.ticketTitle}}
        <view class="selected">{{orderParams.ticketName}}</view>
    </view>
    <view class='csblock'>
        <view class='items {{current == index ? "active" : ""}}' hover-class='touch' wx:for="{{detail.activityTicketList}}" wx:key="activityTicketList" data-id="{{item.id}}" data-price="{{item.price}}" bindtap='checkTicket' data-index="{{index}}" data-name="{{item.ticketName}}"
            data-count="{{item.maxBuy}}" data-inid="{{item.activityTicketInventory[0].id}}">
            {{item.ticketName}}
            <view class="price"> {{item.price}}元</view>
        </view>
    </view>
</view>
<view class='a-block f-c-sb'>
    <view class='cstitle'>
        <view>已选{{orderParams.num}}张</view>
        <view class="max">最多限制{{maxlen}}张</view>
    </view>
    <view class='btns'>
        <view hover-class='touch' class="btn btn-minus" bindtap="bindChange" data-type="minus">
            <view class='ico-minus'></view>
        </view>
        <text>{{num}}</text>
        <view hover-class='touch' class="btn btn-plus" bindtap="bindChange" data-type="plus"> <view class='ico-plus'></view></view>
    </view>
</view>
